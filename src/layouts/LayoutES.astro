---
interface Props {
  title: string;
}
const { title } = Astro.props;

const { currentLocale } = Astro;
console.log(currentLocale);
---

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const preferredTheme = localStorage.getItem("theme");
    if (preferredTheme === "dark") {
      document.documentElement.classList.add("dark");
    }
  });
</script>

<html lang={currentLocale} id="htmlElement">
  <head>
    <link rel="stylesheet" href="/css/main.css" />
    <meta charset="UTF-8" />
    <meta name="publisher" content="Hugo Oliva">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-11G1JWL605"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-11G1JWL605");
    </script>

    <meta
      name="description"
      content="Hugo Oliva | Desarrollador Web y Diseñador. Portafolio profesional con proyectos innovadores y soluciones tecnológicas creativas. ¡Explora mi trabajo!"
    />

    <meta
      name="keywords"
      content="Hugo Oliva, desarrollador frontend especializado en React, desarrollador web con NextJS, diseño web moderno, desarrollador full stack, programador de e-commerce, ingeniero en inteligencia artificial, IA y big data, ingeniero de big data, soluciones de IA para negocios"
    />
    <meta name="robots" content="index, follow" />

    <meta name="author" content="Hugo Oliva" />
    <link rel="me" href="https://hugooliva.com" type="text/html" />
    <link rel="canonical" href="https://hugooliva.com" />

    <meta name="copyright" content="Hugo Oliva" />

    <meta
      http-equiv="Cache-Control"
      content="no-cache, no-store, must-revalidate"
    />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
  </head>
  <body>
    <slot />
  </body>
</html>
