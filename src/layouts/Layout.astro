---
interface Props {
  title: string;
}
const { title } = Astro.props;

const { currentLocale } = Astro;
console.log(currentLocale);
---

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const preferredTheme = localStorage.getItem("theme");
    if (preferredTheme === "dark") {
      document.documentElement.classList.add("dark");
    }
  });
</script>

<html lang={currentLocale} id="htmlElement">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google tag (gtag.js) -->
    <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-11G1JWL605"
    ></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-11G1JWL605");
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html.dark {
    color-scheme: dark;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    background-image: url("../../public/whiteDots.svg");
    background-repeat: repeat;
    background-position: center;
  }

  html.dark body {
    background-image: url("../../public/blackDots.svg");
  }

  ::-webkit-scrollbar {
    width: 5px;
  }
  ::-webkit-scrollbar-track {
    background: transparent;
  }
  ::-webkit-scrollbar-thumb {
    background: #e5e7eb;
    border-radius: 5px;
  }

  html.dark ::-webkit-scrollbar-thumb {
    background: #1e1e1e; /* Cambia #374151 por el color que prefieras para el tema oscuro */
    border-radius: 5px;
  }
  /* Cambia el color del pulgar de la barra de desplazamiento al pasar el rat√≥n */
  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }

  .tooltip {
    position: relative;
    cursor: pointer;
  }

  .tooltip:before,
  .tooltip:after {
    display: block;
    opacity: 0;
    pointer-events: none;
    position: absolute;
    transition: all 0.15s ease-in-out; /* Asegura transiciones suaves */
  }

  .tooltip:after {
    border-right: 6px solid transparent;
    border-bottom: 6px solid #e2e2e2;
    border-left: 6px solid transparent;
    content: "";
    height: 0;
    top: 54px;
    left: 20px;
    width: 0;
  }

  .tooltip:before {
    background: #e2e2e2;
    border-radius: 5px;
    color: black;
    font-weight: bold;
    content: attr(data-title);
    font-size: 14px;
    padding: 6px 10px;
    top: 60px;
    white-space: nowrap;
    z-index: 999;
    left: 10%;
    transform: translateX(-50%);
    position: absolute;
  }

  /* Animaciones de fade */
  .tooltip.fade:after,
  .tooltip.fade:before {
    transform: translate3d(0, -10px, 0);
  }

  .tooltip.fade:hover:after,
  .tooltip.fade:hover:before {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
</style>
